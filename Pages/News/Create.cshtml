@page
@model PCMSystem.Pages.News.CreateModel

@{
    ViewData["Title"] = "Đăng bài viết";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-lg border-0 animate__animated animate__fadeInDown card-hover-gradient news-card" tabindex="0">
                <div class="card-header bg-info bg-gradient text-white text-center py-3 rounded-top">
                    <h2 class="mb-0"><i class="bi bi-megaphone-fill me-2"></i> Đăng bài viết mới</h2>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    <form method="post">
                        <div class="mb-3">
                            <label for="Title" class="form-label fw-bold">Tiêu đề</label>
                            <input type="text" name="Title" id="Title" class="form-control border-info shadow-sm" placeholder="Tiêu đề bài viết" required value="@Model.Title"/>
                        </div>
                        <div class="mb-3">
                            <label for="Content" class="form-label fw-bold">Nội dung</label>
                            <textarea name="Content" id="Content" class="form-control border-info shadow-sm" rows="8" placeholder="Nội dung bài viết..." required>@Model.Content</textarea>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-info flex-grow-1 text-white fw-bold shadow animate__animated animate__pulse"> <i class="bi bi-send-fill me-1"></i> Đăng bài</button>
                            <a asp-page="./Index" class="btn btn-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
